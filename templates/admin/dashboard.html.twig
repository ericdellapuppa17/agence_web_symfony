{% extends 'base.html.twig' %}

{% block title %}Administration{% endblock %}

{% block body %}

    <div class="container mt-5 px-3">

        <div class="row mb-4">
            <div class="col text-center">
                <h1>Espace Administration</h1>  
                <p class="text-muted">Gérez l'ensemble des ressources du système</p>            
            </div>
        </div>


        <div class="row g-4">

            <!-- gestion des tickets -->
            <div class="col-md-6 col-lg-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Tickets</h5>
                        <p class="card-text text-muted">Voir et gérer tous les tickets</p>
                        <a href="{{ path('admin_ticket_index') }}" class="btn btn-primary w-100">Gestion des tickets</a>
                    </div>
                </div>
            </div>

            <!-- gestion des catégories -->
            <div class="col-md-6 col-lg-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Catégories</h5>
                        <p class="card-text text-muted">Créer et modifier les catégories</p>
                        <a href="{{ path('admin_categorie_index') }}" class="btn btn-primary w-100">Gestion des catégories</a>
                    </div>
                </div>
            </div>

            <!-- gestion des statuts -->
            <div class="col-md-6 col-lg-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Statuts</h5>
                        <p class="card-text text-muted">Paramétrer les statuts disponibles</p>
                        <a href="#" class="btn btn-primary w-100">Gestion des statuts</a>
                    </div>
                </div>
            </div>

            <!-- gestion des responsables -->
            <div class="col-md-6 col-lg-3">
                <div class="card shadow-sm h-100">
                    <div class="card-body text-center">
                        <h5 class="card-title">Responsables</h5>
                        <p class="card-text text-muted">Ajouter et modifier des responsables</p>
                        <a href="#" class="btn btn-primary w-100">Gestion des responsables</a>
                    </div>
                </div>
            </div>

        </div>

        <div class="text-center mt-5">
            <a href="{{ path('agent_ticket_index') }}" class="btn btn-secondary">
                Accéder à l'interface Agent
            </a>
        </div>
    
    </div>


{% endblock %}
