{% extends 'base.html.twig' %}

{% block title %}Gestion des statuts{% endblock %}

{% block body %}

<div class="container mt-5">

    <h1 class="mb-4">Gestion des statuts</h1>

    {# Messages Flash #}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible fade show mt-2" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary mb-4">
        <i class="bi bi-chevron-left me-1"></i> Retour à l'administration
    </a>

    <div class="row">

        {# Liste des statuts #}
        <div class="col-md-8">

            <div class="card shadow-sm">

                <div class="card-header bg-secondary text-white">
                    <strong>Liste des statuts</strong>
                </div>

                <div class="card-body p-0">
                    <table class="table table-hover mb-0">

                        <thead class="table-light">
                            <tr>
                                <th>Libellé</th>
                                <th style="width: 30%;">Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            {% for s in statuts %}
                                <tr>
                                    <td>{{ s.libelle }}</td>
                                    <td>
                                        <a href="{{ path('admin_statut_edit', {id: s.id}) }}" class="btn btn-warning btn-sm me-2">
                                            <i class="bi bi-pencil"></i> Modifier
                                        </a>

                                        <a href="{{ path('admin_statut_delete', {id: s.id}) }}" onclick="return confirm('Supprimer ce statut ?');" class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i> Supprimer
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td class="text-center text-muted py-3">
                                        Aucun statut trouvé !
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>

                    </table>
                </div>

            </div>

        </div>
    
        {# Formulaire create/edit #}
        <div class="col-md-4">
        
            <div class="card shadow-sm mb-4">
            
                <div class="card-header bg-primary text-white">
                    <strong>{{ editMode ? 'Modifier le statut : ' ~ current.libelle : 'Créer un statut' }}</strong>
                </div>

                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_row(form.libelle) }}

                        <button class="btn btn-primary w-100 mt-3">
                            {% if editMode %}
                                <i class="bi bi-pencil-square me-2"></i> Mettre à jour
                            {% else %}
                                <i class="bi bi-plus-circle"></i> Ajouter
                            {% endif %}
                        </button>

                        {# annuler en mode édition #}
                        {% if editMode %}
                            <a href="{{ path('admin_statut_index') }}" class="btn btn-secondary w-100 mt-2">
                                <i class="bi bi-x-circle me-2"></i> Annuler
                            </a>
                        {% endif %}

                    {{ form_end(form) }}
                </div>
            
            </div>
        
        </div>

    </div>    

</div>

{% endblock %}