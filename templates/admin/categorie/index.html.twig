{% extends 'base.html.twig' %}

{% block title %}Gestion des catégories{% endblock %}

{% block body %}

<div class="container mt-5">

    <h1 class="mb-4">Gestion des catégories</h1>

    {# Messages Flash #}
    {% for type, messages in app.flashes %}
        {% for message in messages %}
            <div class="alert alert-{{ type }} alert-dismissible fade show mt-2" role="alert">
                {{ message }}
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="close"></button>
            </div>
        {% endfor %}
    {% endfor %}

    <a href="{{ path('admin_dashboard') }}" class="btn btn-secondary mb-4">
        ← Retour à l'administration
    </a>

    <div class="row">

        {# Liste des catégories #}
        <div class="col-md-8">

            <div class="card shadow-sm">

                <div class="card-header bg-secondary text-white">
                    <strong>Liste des catégories</strong>
                </div>

                <div class="card-body p-0">
                    <table class="table table-hover mb-0">

                        <thead class="table-light">
                            <tr>
                                <th>Nom</th>
                                <th style="width: 30%;">Actions</th>
                            </tr>
                        </thead>

                        <tbody>
                            {% for c in categories %}
                                <tr>
                                    <td>{{ c.nom }}</td>
                                    <td>
                                        <a href="{{ path('admin_categorie_edit', {id: c.id}) }}" class="btn btn-warning btn-sm me-2">
                                            <i class="bi bi-pencil"></i> Modifier
                                        </a>

                                        <a href="{{ path('admin_categorie_delete', {id: c.id}) }}" onclick="return confirm('Supprimer cette catégorie ?');" class="btn btn-danger btn-sm">
                                            <i class="bi bi-trash"></i> Supprimer
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td class="text-center text-muted py-3">
                                        Aucune catégorie trouvée !
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>

                    </table>
                </div>

            </div>

        </div>
    
        {# Formulaire create/edit #}
        <div class="col-md-4">
        
            <div class="card shadow-sm mb-4">
            
                <div class="card-header bg-primary text-white">
                    <strong>{{ editMode ? 'Modifier la catégorie : ' ~ current.nom : 'Créer une catégorie' }}</strong>
                </div>

                <div class="card-body">
                    {{ form_start(form) }}
                        {{ form_row(form.nom) }}

                        <button class="btn btn-primary w-100 mt-3">
                            {{ editMode ? 'Mettre à jour' : 'Ajouter' }}
                        </button>

                        {# annuler en mode édition #}
                        {% if editMode %}
                            <a href="{{ path('admin_categorie_index') }}" class="btn btn-secondary w-100 mt-2">
                                Annuler
                            </a>
                        {% endif %}

                    {{ form_end(form) }}
                </div>
            
            </div>
        
        </div>

    </div>    

</div>

{% endblock %}